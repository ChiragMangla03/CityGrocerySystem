@model List<CGS.Model.CategoryMaster>
@{
    Layout = "Customer_Dashboard";
}

<div id="ViewCategories">
    @if (Model != null && Model.Count > 0)
    {
        var knt = 0; var tilecolor = "";
        @foreach (var category in Model)
        {
            knt++;
            if (knt > 5)
            {
                knt = 1;
            }
            tilecolor = "color" + knt.ToString();
            <div class="row pt-3">
                <div class="col-5 categorytile center @tilecolor" style="cursor:pointer">
                    <div class="row">
                        <div class="col-4 pt-2">
                            <img src="@category.ImagePath" />
                        </div>
                        <div class="col center pr-3">@category.CategoryName</div>
                    </div>
                </div>
            </div>
        }
    }
</div>

<script src="~/js/CustomerDashboard.js"></script>