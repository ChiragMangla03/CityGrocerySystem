@model List<CGS.Model.ProductDetail>
@{
    Layout = "Customer_Dashboard";
}
<link href="~/css/datatables.min.css" rel="stylesheet" />

@if (Model.Count > 0)
{
    <select id="CategoryList"> 
        <option value="">Select Category</option>
        @foreach (var category in Model[0].CategoryList)
        {
            <option value="@category.value">@category.text</option>
        }
    </select>
}

<div id="ViewProducts">
    @if (Model != null && Model.Count > 0)
    {
        var knt = 0; var tilecolor = "";
        @foreach (var product in Model)
        {
            knt++;
            if (knt > 5)
            {
                knt = 1;
            }
            tilecolor = "color" + knt.ToString();
            <div class="row pt-3">
                <div class="col-5 producttile center @tilecolor" style="cursor:pointer">
                    <div class="row">
                        <div class="col-4 pt-2">
                            <img src="@product.ImagePath" alt="Image not found" />
                        </div>
                        <div class="col center pr-3">@product.Product_name</div>
                    </div>
                </div>
            </div>
        }
    }
</div>

<script src="~/js/CustomerDashboard.js"></script>