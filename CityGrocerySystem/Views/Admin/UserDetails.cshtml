@model List<CGS.Model.UserDetails>
@{
    Layout = "Admin_Dashboard";
}
<link href="~/css/datatables.min.css" rel="stylesheet" />

<table id="UserDetail" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>User Name</th>
            <th>User Display Name</th>
            <th>Mobile Number</th>
            <th>Email ID</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @user.user_name
                    </td>
                    <td>
                        @user.user_display_name
                    </td>
                    <td>
                        @user.phone_no
                    </td>
                    <td>
                        @user.email_id
                    </td>
                    <td>
                        @user.address
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" style="text-align: center;">No data Found</td>
            </tr>
        }
    </tbody>
</table>