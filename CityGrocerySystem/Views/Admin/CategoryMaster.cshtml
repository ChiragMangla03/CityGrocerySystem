<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<div id="myModal" class="modal fade">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header">
                <div class="icon-box">
                    <i class="material-icons">&#xE876;</i>
                </div>
                <h4 class="modal-title w-100" id="popup_title">SUCCESS!</h4>
            </div>
            <div class="modal-body">
                <p class="text-center" id="popup_msg"></p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success btn-block" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<button onclick="AddNewCategory()">Add</button>
<div id="ViewCategories">
    @if (Model != null && Model.Count > 0)
    {
        var knt = 0; var tilecolor = "";
        @foreach (var category in Model)
        {
            //var img = "../../Images/Categories/"+ @category.ImagePath;
            knt++;
            if (knt > 5)
            {
                knt = 1;
            }
            tilecolor = "color" + knt.ToString();
            <div class="row pt-3">
                <div class="col-5 categorytile center @tilecolor">
                    <div class="row">
                        <div class="col-4 pt-2">
                            <img src="@category.ImagePath" />
                        </div>
                        <div class="col center pr-3">@category.CategoryName</div>
                    </div>
                    @*<span>
                            <img src="~/Images/Categories/Oils_Refind.jpg" />
                        </span>
                        <span class="col">@category.CategoryName</span>*@
                </div>
            </div>
        }
    }
</div>
<div id="AddNewCategory" style="display:none" class="pt-5">
    <table id="tblCategory">
        <thead>
            <tr>
                <th>Category Name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <input type="text" id="CategoryName" />
                </td>
            </tr>
        </tbody>
    </table>
    <button onclick="Addcategory();">Save</button>
    @*<button id="SaveNewProduct">Save</button>*@
    <button id="CancelCategoryAdd" onclick="Cancel()">Cancel</button>
</div>
<script src="~/js/AdminDashboard.js"></script>